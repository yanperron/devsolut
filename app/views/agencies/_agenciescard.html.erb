<div class="container">
  <div class="row">
    <% @agencies.each do |agency|%>
    <div class="col-xs-12 col-md-4">
      <div class="agency">
        <%= image_tag agency.photo %>
        <h2><%= agency.name %></h2>
        <p> <%= agency.short_description %></p>
        <div class="stars">
          <% agency.review_mean.times do %>
            <i class="fa fa-star"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
