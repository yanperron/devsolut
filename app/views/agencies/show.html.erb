<h1 class="text-center"><u> Voici les d√©tails de cette Agence : </u></h1>

<div class="padded">
  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-md-6" id="photo">
        <%= cl_image_tag @agency.photo, height: 399, width: 500 %>
      </div>

      <div class="col-xs-12 col-md-6" id="description">

      <p>
      <strong> <u> Name: </u></strong>
      <%= @agency.name %>
      </p>

      <p>
      <strong> <u> Description:</u> </strong>
      <%= @agency.description %>
      </p>

      <p>
      <strong> <u> Address: </u> </strong>
      <%= @agency.address %>
      </p>


      <p>
      <strong> <u> Github info: </u> </strong>
      <%= @agency.repos_public %>
      <%= @agency.total_stars %>
      <%= @agency.total_members %>
      </p>

      <p>
      <strong><u> References: </u></strong>
      </p>
      <% @agency.references.each do |r| %>
      <p> <%= r.name %> </p>
      <p> <%= r.description %> </p>
      <%= cl_image_tag r.photo, crop: :fill %>
      <% end %>

      <p>
      <strong> <u> Reviews: </u> </strong>
      </p>

      <p> <%= @agency.review_mean.to_i.times do %>
            <i class="fa fa-star"></i>
      <% end %>
      </p>

      <div class ="padded-product text-center">
      <%= link_to 'Ask for a quote', new_agency_quote_path(@agency), :class => "btn btn-danger" %>
      </div>

      <div class="text-center" id="bottom-link">
      <%= link_to 'Add a Review', new_agency_review_path(@agency) %> |
      <%= link_to 'Add a Reference', new_agency_reference_path(@agency) %> |
      <%= link_to 'Edit', edit_agency_path(@agency) %> |
      <%= link_to 'Back', agencies_path %>
      </div>

      </div>
    </div>
 </div>
</div>


